# Docker Environment Configuration
# Copy this file to .env for docker-compose

# === API Keys (Required for Cloud OCR) ===
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GOOGLE_API_KEY=
AZURE_VISION_KEY=
AZURE_VISION_ENDPOINT=

# === OCR Engine Selection ===
# Options: tesseract, gpt-4o-mini, apple-vision (macOS only), azure-vision
OCR_ENGINE=tesseract

# === Logging ===
# Options: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# === Service Ports ===
REVIEW_PORT=5000
MONITOR_PORT=5002

# === Processing Options ===
# Batch size for processing
BATCH_SIZE=10

# Number of worker threads
WORKERS=4
